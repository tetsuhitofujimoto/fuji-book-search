<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'プロフィール詳細', user_path(user) %></p>
            <% if controller.action_name == "followings" && current_user.id == @user.id %>
              <div class="btn">
                <%= render 'relationships/follow_button', user: user %>
              </div>
            <% elsif controller.action_name == "followers" && current_user.id == @user.id %>
              <div class="btn">
                <%= render 'relationships/follow_button', user: user %>
              </div>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>